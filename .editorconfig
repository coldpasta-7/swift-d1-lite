root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space
indent_size = 2
tab_width = 8

[*.swift]
indent_style = space
indent_size = 2
tab_width = 8
max_line_length = 120

[*.{md,markdown}]
max_line_length = 80
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
tab_width = 8
trim_trailing_whitespace = true
